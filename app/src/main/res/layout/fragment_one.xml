<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp">

        <com.example.gogaga.CircleAlarmTimerView
            android:id="@+id/circletimerview"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_margin="70dp"
            android:layout_weight="1" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Age range preference allows us to suggest matches accordingly. Some matches may fall outside the specific range . " >

    </TextView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stateListAnimator="@null"
        android:layout_margin="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stateListAnimator="@null"
            android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Interested in"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">
       <Button
           android:layout_width="50dp"
           android:layout_height="50dp"
           android:layout_margin="10dp"
           android:id="@+id/men"
           android:stateListAnimator="@null"
           android:background="@drawable/heart">
       </Button>
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:stateListAnimator="@null"
            android:id="@+id/women"
            android:layout_margin="10dp"
            android:background="@drawable/heartoutlinepink"/>
    </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">
               <TextView
                   android:layout_width="50dp"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:gravity="center"
                   android:text="Men"
                   android:textStyle="bold"
                   android:textColor="#00D5EA"
                   android:textSize="12dp"
                  android:layout_margin="10dp">

               </TextView>
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Women"

                    android:textSize="12dp"
                    android:layout_margin="10dp"
                    android:textStyle="bold"
                    android:textColor="#EA0071">

                </TextView>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Pick your gender preference."/>


</LinearLayout>